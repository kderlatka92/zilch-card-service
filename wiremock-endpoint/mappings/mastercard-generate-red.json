{
  "request": {
    "method": "POST",
    "urlPath": "/mastercard/generate",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.holderName =~ /.*red.*/i)]"
      }
    ]
  },
  "response": {
    "status": 503,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "error": "SERVICE_UNAVAILABLE",
      "message": "MasterCard Service Temporarily Unavailable - Maintenance for RED cardholders",
      "timestamp": "{{now format='yyyy-MM-dd HH:mm:ss'}}",
      "retryAfter": "PT5M"
    }
  }
}
